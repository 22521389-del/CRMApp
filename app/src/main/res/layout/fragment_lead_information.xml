<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_color_main_screen"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/sv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin15">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/infor_lead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/infor_lead"
                android:textSize="@dimen/text18"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:weightSum="5">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_input_box"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    app:endIconMode="dropdown_menu"
                    android:paddingEnd="4dp"
                    android:paddingStart="8dp">
                    <com.google.android.material.textfield.MaterialAutoCompleteTextView
                        android:id="@+id/edt_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="@string/title_infor"
                        android:ellipsize="none"
                        android:inputType="none"
                        android:textColorHint="@color/icon_infor"
                        android:paddingStart="4dp"
                        android:paddingEnd="4dp"
                        android:textSize="14sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/infor_name"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/icon_infor"
                    android:layout_marginStart="10dp"
                    android:hint="@string/firt_name"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_input_box">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_family_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:paddingStart="4dp"
                        android:textColorHint="@color/bg_detail"
                        android:paddingEnd="4dp"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/first_name"
                    android:textSize="14sp"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:hint="@string/phone_infor"
                    android:inputType="phone"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/icon_infor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="@string/email"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sex_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                android:layout_marginTop="10dp">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edt_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:hint="@string/sex_infor"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    android:background="@android:color/transparent"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthday_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="@color/icon_infor"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:hint="@string/birthday"
                    android:background="@android:color/transparent"
                    android:inputType="date"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/state_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:textColorHint="@color/icon_infor"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edt_state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:hint="@string/state_infor"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/day_contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                android:layout_marginTop="10dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconTint="@color/icon_infor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_contact_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="@string/contact_day"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_input_box"
                android:textColorHint="@color/icon_infor"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                app:endIconMode="dropdown_menu"
                android:layout_marginTop="10dp">
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/edt_created_by"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:inputType="none"
                    android:hint="@string/hint_created_by"
                    android:background="@android:color/transparent"
                    android:paddingStart="@dimen/margin_base"
                    android:paddingEnd="@dimen/margin_base"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>