<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_input_box">

    <ImageView
        android:id="@+id/ic_contact"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_contact"
        android:tint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/filltencuochop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tên người"
        android:textStyle="bold"
        android:textSize="@dimen/text_medium"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/ic_contact"
        app:layout_constraintTop_toTopOf="@id/ic_contact"
        app:layout_constraintEnd_toStartOf="@id/ic_more"/>

    <ImageView
        android:id="@+id/ic_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_more"
        android:tint="@color/blue"
        app:layout_constraintTop_toTopOf="@id/ic_contact"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fillcongty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Công ty"
        android:textSize="@dimen/text_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/ic_contact"
        app:layout_constraintTop_toBottomOf="@id/ic_contact"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/fillngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/ic_contact"
        app:layout_constraintTop_toBottomOf="@id/fillcongty"/>

    <TextView
        android:id="@+id/fill_cuocgoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/fillngay"
        app:layout_constraintTop_toTopOf="@id/fillngay"/>

    <TextView
        android:id="@+id/fill_meeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/fill_cuocgoi"
        app:layout_constraintTop_toTopOf="@id/fill_cuocgoi"/>

</androidx.constraintlayout.widget.ConstraintLayout>
