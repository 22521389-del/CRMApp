<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_action"
        >

        <TextView
            android:id="@+id/infor_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/infor_lead"
            android:textStyle="bold"
            android:textSize="@dimen/text18"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_addinfor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/infor_lead"
            app:layout_constraintBottom_toBottomOf="@id/infor_lead"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_infor_lead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/infor_lead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_action">

            <EditText
                android:id="@+id/infor_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/firt_name"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/last_name"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/infor_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

            <EditText
                android:id="@+id/sex_infor"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/sex_infor"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/last_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

            <EditText
                android:id="@+id/birthday_infor"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/birthday"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/sex_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/phone_infor"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/phone_infor"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/birthday_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/email_infor"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/email"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/phone_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="10dp"
                />

            <EditText
                android:id="@+id/state_infor"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/state_infor"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/email_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

            <EditText
                android:id="@+id/state_detail"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/state_detail"
                app:layout_constraintTop_toBottomOf="@id/state_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:textSize="@dimen/text16"
                android:minLines="6"
                android:gravity="top|start"
                android:autofillHints="name"
                android:layout_marginTop="@dimen/margin_action"
                />

            <EditText
                android:id="@+id/another_phone"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/another_phone"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/state_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--Company information-->
        <TextView
            android:id="@+id/company_infor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/company_infor"
            android:textStyle="bold"
            android:textSize="@dimen/text18"
            app:layout_constraintTop_toBottomOf="@id/cl_infor_lead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_action"
            />
        <ImageView
            android:id="@+id/iv_add_company_infor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintTop_toTopOf="@id/company_infor"
            app:layout_constraintBottom_toBottomOf="@id/company_infor"
            android:layout_marginTop="@dimen/add_infor"
            android:contentDescription="@null"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_company_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/company_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/margin_action">

            <EditText
                android:id="@+id/tax_infor"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/tax_code"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_company"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:background="@drawable/infor_bg"
                app:layout_constraintTop_toBottomOf="@id/tax_infor"
                android:layout_marginTop="@dimen/margin_action">

                <EditText
                    android:id="@+id/et_company_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/name_company"
                    android:textSize="@dimen/text16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@null"
                    />
                <ImageView
                    android:id="@+id/information"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_information"
                    android:contentDescription="@null"
                    android:layout_gravity="bottom"
                    android:tooltipText="@string/tipInfor"
                    tools:ignore="UnusedAttribute"
                    app:tint="@color/tab_menu"
                    app:layout_constraintEnd_toEndOf="@id/et_company_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_job"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:background="@drawable/infor_bg"
                app:layout_constraintTop_toBottomOf="@id/cl_company"
                android:layout_marginTop="@dimen/margin_action">

                <TextView
                    android:id="@+id/job_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textSize="@dimen/text16"
                    android:hint="@string/job_infor"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
                <ImageView
                    android:id="@+id/information_job"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ic_arrow"
                    android:contentDescription="@null"
                    android:layout_gravity="bottom"
                    app:tint="@color/tab_menu"
                    app:layout_constraintEnd_toEndOf="@id/job_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/revenue_infor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/revenue_infor"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toBottomOf="@id/cl_job"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                />

            <TextView
                android:id="@+id/number_of_employees"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/number_employees"
                android:textSize="@dimen/text16"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                app:layout_constraintTop_toBottomOf="@id/revenue_infor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/company_detail"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:hint="@string/company_description"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                android:textSize="@dimen/text16"
                android:minLines="6"
                android:gravity="top|start"
                app:layout_constraintTop_toBottomOf="@id/number_of_employees"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--End Company Information-->

        <!-- Address information-->
        <TextView
            android:id="@+id/address_infor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/address_infor"
            android:textSize="@dimen/text18"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/cl_company_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_action"
            />
        <ImageView
            android:id="@+id/iv_add_address_infor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintTop_toTopOf="@id/address_infor"
            app:layout_constraintBottom_toBottomOf="@id/address_infor"
            android:contentDescription="@null"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_address_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_action"
            app:layout_constraintTop_toBottomOf="@id/address_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <EditText
                android:id="@+id/address"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/address"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                android:textSize="@dimen/text16"
                android:gravity="top|start"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/district"
                android:textSize="@dimen/text16"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/province"
                android:textSize="@dimen/text16"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                app:layout_constraintTop_toBottomOf="@id/district"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/nation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/nation"
                android:textSize="@dimen/text16"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                app:layout_constraintTop_toBottomOf="@id/province"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--End address information-->

        <!-- description information-->
        <TextView
            android:id="@+id/descriptive_infor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text18"
            android:text="@string/descrip_information"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_action"
            app:layout_constraintTop_toBottomOf="@id/cl_address_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/iv_descriptive_infor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_arrow_up"
            app:layout_constraintTop_toTopOf="@id/descriptive_infor"
            app:layout_constraintBottom_toBottomOf="@id/descriptive_infor"
            android:contentDescription="@null"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_descript_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_action"
            app:layout_constraintTop_toBottomOf="@id/descriptive_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_description"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/description"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                android:textSize="@dimen/text16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <EditText
                android:id="@+id/specal_notes"
                android:layout_width="0dp"
                android:layout_height="@dimen/heigh_et"
                android:hint="@string/special_notes"
                android:background="@drawable/infor_bg"
                android:layout_marginTop="@dimen/margin_action"
                android:textSize="@dimen/text16"
                android:minLines="6"
                android:gravity="top|start"
                app:layout_constraintTop_toBottomOf="@id/et_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!--End description information-->

        <TextView
            android:id="@+id/tv_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/image"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/cl_descript_infor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>