<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_background">

    <!-- Warning icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_warning"
        android:contentDescription="Cảnh báo"
        android:layout_marginBottom="16dp" />

    <!-- Text message -->

    <!-- Button container -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="20dp"
        android:text="Cơ hội chưa có thông tin báo giá, người liên hệ và hoạt động liên quan. Vui lòng cập nhật thêm thông tin để có thể chuyển bước cơ hội."
        android:textColor="@color/gray_dark"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:weightSum="2">

        <!-- Cancel button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Hủy bỏ"
            android:textColor="@color/blue_primary"
            android:backgroundTint="@color/pastel_blue_light"
            android:textAllCaps="false"
            android:padding="12dp" />

        <!-- Confirm button -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đồng ý"
            android:textColor="@color/white"
            android:backgroundTint="@color/blue_primary"
            android:textAllCaps="false"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>