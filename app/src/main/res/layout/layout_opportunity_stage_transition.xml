<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/actionContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingTop="12dp"
    android:paddingBottom="24dp">

    <!-- Nút đóng -->
    <ImageView
        android:id="@+id/btn_opportunity_action_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_escape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp" />

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_opportunity_action_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chuyển bước bán hàng"
        android:textColor="#111827"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/btn_opportunity_action_close"
        app:layout_constraintBottom_toBottomOf="@id/btn_opportunity_action_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_opportunity_action_close"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <!-- Bước bán hàng hiện tại -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_current_stage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:hint="Bước bán hàng hiện tại"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_opportunity_action_title"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/sp_sales_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="Thương lượng/Đàm phán" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Bước bán hàng tiếp theo -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_next_stage"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Bước bán hàng tiếp theo *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_current_stage"
        app:endIconMode="dropdown_menu">

        <AutoCompleteTextView
            android:id="@+id/sp_next_sales_stage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ngày chết dự kiến -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_expected_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Ngày chết dự kiến"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_next_stage"
        app:endIconMode="custom"
        app:endIconDrawable="@drawable/ic_calendar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bottem_sheet_expected_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:text="28/09/2024" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Giá trị cơ hội -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_opportunity_value"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Giá trị cơ hội"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_expected_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bottom_sheet_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text="12.000.000" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ghi chú -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_note"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Ghi chú *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_opportunity_value">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_bottom_sheet_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:minHeight="120dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Nút hành động -->
    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_note">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/pastel_blue_light"
            android:text="Lưu"
            android:textColor="@color/blue"
            android:textSize="14sp"
            android:paddingVertical="12dp" />

        <Button
            android:id="@+id/btn_save_and_calendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/blue_primary"
            android:text="Lưu và tạo lịch"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingVertical="12dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>