<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_action"
    android:background="@color/bg_lead">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/margin20"
        android:layout_marginEnd="@dimen/margin20"
        android:layout_marginTop="@dimen/margin_base"
        android:layout_marginBottom="@dimen/margin_base">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/DetailLead"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:text="@string/DetailLead"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_action"/>

        <ImageView
            android:id="@+id/left_Lead"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="10dp"
            android:src="@drawable/arrow_back"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/right_Lead"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_next"
            android:layout_margin="@dimen/start_margin"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/edit_detail"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_pencil"
            android:layout_margin="@dimen/start_margin"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/choose_active"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_more"
            android:layout_margin="@dimen/start_margin"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:contentDescription="@null"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infor_Lead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/bg_lead"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginEnd="@dimen/margin20">
            
            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                
                android:src="@drawable/ic_user"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name"
                android:text="@string/cus_name"
                android:padding="@dimen/start_margin"
                android:layout_marginStart="@dimen/margin_base"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/phone_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginEnd="@dimen/margin20"
            android:layout_marginTop="@dimen/start_margin"
            android:layout_gravity="center_vertical">

<!--            Left-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="012345678"
                        android:textColor="@color/seemore_color"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                    <ImageView
                        android:id="@+id/phone_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_call"
                        app:tint="@color/seemore_color"
                        app:layout_constraintStart_toEndOf="@id/tv_phone"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_phone"
                        android:contentDescription="@null"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/start_margin"
                    android:text="Công ty ABC"
                    />
            </LinearLayout>
<!--            Right-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="abc@gmail.com"
                        android:textColor="@color/seemore_color"
                        app:layout_constraintStart_toStartOf="@id/guideline_center"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_mail"
                        app:tint="@color/seemore_color"
                        app:layout_constraintStart_toEndOf="@id/tv_email"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_email"
                        android:contentDescription="@null"/>
                </LinearLayout>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mới"
                    android:textSize="12sp"
                    app:chipCornerRadius="15dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin20"
            android:layout_marginEnd="@dimen/margin20">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_created_by"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/nhanvienlist"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_basex2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/created_by"
                        android:textSize="12sp"
                        android:textColor="@color/gray1"/>
                    <TextView
                        android:id="@+id/tv_created_by"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin5"
                        android:text="Nguyen Van A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_person_in_charge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/nhanvienlist"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/margin_basex2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/person_in_charge"
                        android:textSize="12sp"
                        android:textColor="@color/gray1"/>
                    <TextView
                        android:id="@+id/tv_person_in_charge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin5"
                        android:text="Nguyen Van A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>