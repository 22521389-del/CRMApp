<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_color_main_screen"
    tools:context=".MainDirectory.main_screen">

    <!--header-->
    <TextView
        android:id="@+id/tv_main_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/title_app"
        android:textColor="@color/blue"
        android:paddingTop="@dimen/top_padding"
        android:paddingBottom="@dimen/bottom_padding"
        android:background="@color/white"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15"
        android:textStyle="bold"/>
    <!--end header-->

    <!--Module-->
    <LinearLayout
        android:id="@+id/ll_module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_main_header"
        android:paddingTop="@dimen/top_padding"
        android:paddingBottom="@dimen/bottom_padding"
        android:paddingStart="@dimen/margin15"
        android:paddingEnd="@dimen/margin15">

        <TextView
            android:id="@+id/tv_name_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/module"
            android:textSize="@dimen/text16"
            android:textStyle="bold"
            android:paddingTop="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rl_module"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingTop="@dimen/top_padding"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingStart="@dimen/margin7"
            android:paddingEnd="@dimen/margin7"/>
    </LinearLayout>
    <!--End module-->

    <LinearLayout
        android:id="@+id/ll_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll_module"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/top_padding"
        android:paddingTop="@dimen/top_padding">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_visit"
                android:textSize="@dimen/text18"
                android:textStyle="bold"
                android:paddingStart="@dimen/margin15"
                android:paddingEnd="@dimen/margin15" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/tv_seemore_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_more"
                android:textSize="@dimen/text14"
                android:textStyle="normal"
                android:paddingEnd="@dimen/margin15"
                android:textColor="@color/seemore_color" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingTop="@dimen/top_padding"
            android:paddingBottom="@dimen/bottom_padding"
            android:paddingStart="@dimen/margin15"
            android:paddingEnd="@dimen/margin15"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>